CC = gcc  -Wall -Wextra -Werror testing.c ft_split.c -Lminilibx_folder -lmlx -lXext -lX11 -lm -o fdf

all: banner
	@echo "\n"
	@$(CC) && ./fdf test_maps/julia.fdf
